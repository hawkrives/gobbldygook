[ignore]
; i don't even know why it checks json files
.*\.json

; stuffs
.*/node_modules/fbjs
.*/node_modules/jest-validate


[libs]
./node_modules/fbjs/flow/lib
./config/decls


[options]
esproposal.class_static_fields=enable
esproposal.class_instance_fields=enable

; allow flow to find the modules that we require with modules/
module.name_mapper='^modules/\(.*\)' -> '<PROJECT_ROOT>/modules/\1'

; allow require'ing non-js files (like webpack does)
module.name_mapper.extension='css' -> '<PROJECT_ROOT>/config/flow/css'
module.name_mapper.extension='scss' -> '<PROJECT_ROOT>/config/flow/css'
module.name_mapper='^\(.*\)\.\(jpg\|png\|svg\|woff\|woff2\)$' -> '<PROJECT_ROOT>/config/flow/file'

suppress_type=$FlowIssue
suppress_type=$FlowFixMe
